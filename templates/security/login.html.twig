{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}
{% block header %}
</head>
<header class="header">
<h1><a class="bgtr" href="{{ path('projects')}}">BUGTRACKING</a>
  <a href = "{{path('app_logout')}}"><img src="/asset/png/viyti.png" class="viyti"></a></h1>
</header>
{% endblock %}

{% block body %}
<div class="page_block">
<form method="post">
    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    {% if app.user %}
        <div class="mb-3">
            You are logged in as {{ app.user.username }}, <a href="{{ path('app_logout') }}">Logout</a>
        </div>
    {% endif %}

    <h1>Please sign in</h1>
    <label for="inputEmail" class="">Email</label>
    <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="big_text" placeholder="Email" required autofocus>
    <label for="inputPassword" class="sr-only">Password</label>
    <input type="password" name="password" id="inputPassword" class="big_text" placeholder="Password" required>

    <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

    {#
        Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
        See https://symfony.com/doc/current/security/remember_me.html

        <div class="checkbox mb-3">
            <label>
                <input type="checkbox" name="_remember_me"> Remember me
            </label>
        </div>
    #}

    <button class="ttt" type="submit">Sign in</button>
</form>
</div>
{% endblock %}
